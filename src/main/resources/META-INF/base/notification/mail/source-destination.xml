<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           ">

    <!--
      == 特定のメール送信元、メール送信先 を定義する例 ==
      下記のようにAutowiredして利用する

      @Autowired
      @Qualifier("alarmMailDestination")
      MailDestination alarmDestination;
    -->

    <!-- デフォルトで付与するFromアドレス -->
    <bean id="defaultMailSource" class="jp.co.biglobe.lib.notification.publication.mail.MailSource">
        <constructor-arg value="${mail.from}"/>
    </bean>

    <!-- アラーム送信用のToアドレス -->
    <bean id="alarmMailDestination" class="jp.co.biglobe.lib.notification.publication.mail.MailDestination">
        <constructor-arg value="${mail.to.alarm}"/>
    </bean>

    <!-- HIOS送信用のToアドレス -->
    <bean id="hiosMailDestination" class="jp.co.biglobe.lib.notification.publication.mail.MailDestination">
        <constructor-arg value="${mail.to.hios}"/>
    </bean>

</beans>
