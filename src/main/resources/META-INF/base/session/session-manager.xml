<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
       ">

    <!-- ======================================================================
    |
    |    リクエストスコープのcomponent-scanの設定を記述
    |    （META-INF/base/scope/scope.xmlから読み込まれる）
    |
    =========================================================================== -->

    <!-- Requestスコープ（HttpServletRequest）を利用したRequestEventSessionを扱うコンポーネント

    【有効化する公開コンポーネント】
    ・なし

    【有効化する非公開コンポーネント】
    ・jp.co.biglobe.lib.danger.event.RequestEventSession;

    【有効化に必要な外部コンポーネント】
    ・なし

    【排他関係の外部コンポーネント】
    ・jp.co.biglobe.lib.scope.event.test
    ・jp.co.biglobe.lib.scope.event.thread
     -->
    <beans profile="mvc,mvc-test">
        <context:component-scan base-package="jp.co.biglobe.lib.scope.event.web"/>
    </beans>


    <!-- ThreadLocalを利用したRequestEventSessionを扱うコンポーネント

    【有効化する公開コンポーネント】
    ・なし

    【有効化する非公開コンポーネント】
    ・jp.co.biglobe.lib.danger.event.RequestEventSession;

    【有効化に必要な外部コンポーネント】
    ・なし

    【排他関係の外部コンポーネント】
    ・jp.co.biglobe.lib.scope.event.test
    ・jp.co.biglobe.lib.scope.event.web
     -->
    <beans profile="integration,integration-test">
        <context:component-scan base-package="jp.co.biglobe.lib.scope.event.thread"/>
    </beans>


    <!-- テスト用RequestEventSessionを扱うコンポーネント

    【有効化する公開コンポーネント】
    ・なし

    【有効化する非公開コンポーネント】
    ・jp.co.biglobe.lib.danger.event.RequestEventSession;

    【有効化に必要な外部コンポーネント】
    ・なし

    【排他関係の外部コンポーネント】
    ・jp.co.biglobe.lib.scope.event.web
    ・jp.co.biglobe.lib.scope.event.thread
     -->
    <!--<context:component-scan base-package="jp.co.biglobe.lib.scope.event.test" />-->

</beans>
