<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
       ">


    <!-- ======================================================================
    |
    |    リクエストスコープのcomponent-scanの設定を記述
    |    （META-INF/base/scope/scope.xmlから読み込まれる）
    |
    =========================================================================== -->


    <!-- RequestEventを扱うコンポーネント

    【有効化する公開コンポーネント】
    ・jp.co.biglobe.lib.plugin.event.RequestEvent
    ・jp.co.biglobe.lib.plugin.event.RequestEventProcess
    ・jp.co.biglobe.lib.plugin.event.RequestEventTime

    【有効化する非公開コンポーネント】
    ・なし

    【有効化に必要な外部コンポーネント】
    ・jp.co.biglobe.lib.plugin.system.Bocap
     -->
    <context:component-scan base-package="jp.co.biglobe.lib.component.event"/>

</beans>
