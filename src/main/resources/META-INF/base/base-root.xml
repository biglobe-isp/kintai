<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       ">


    <!-- ======================================================================
    |
    |    全プロジェクト共通の設定を記述（WEB-INF/applicationContext.xmlから読み込まれる）
    |
    =========================================================================== -->

    <!-- 環境ごとに切り替える設定 -->
    <import resource="classpath:META-INF/base/environment/environment.xml"/>

    <!-- 例外ハンドラの設定の読込 -->
    <import resource="classpath:META-INF/base/exception/exception.xml"/>

    <!-- アラーム／HIOSメール設定の読込 -->
    <import resource="classpath:META-INF/base/alarmmail/alarmmail.xml"/>

    <!-- アプリケーションセッションの設定の読込 -->
    <import resource="classpath:META-INF/base/session/session.xml"/>

    <!-- DB接続の設定の読込 -->
    <import resource="classpath:META-INF/base/database/data-source.xml"/>

    <!-- MyBatis設定の読込 -->
    <import resource="classpath:META-INF/base/database/database.xml"/>

    <!-- AOP設定の読込 -->
    <import resource="classpath:META-INF/base/aop/aop.xml"/>

    <!-- コントローラ設定の読込 -->
    <import resource="classpath:META-INF/base/controller/controller.xml"/>

    <!-- リクエストスコープの設定の読込 -->
    <import resource="classpath:META-INF/base/scope/scope.xml"/>

    <!-- シナリオ実行環境の読込 -->
    <import resource="classpath:META-INF/base/scenario/scenario.xml"/>

    <!-- メール通知設定の読込 -->
    <!-- isplibrary-notificationライブラリが必要 -->
    <!--<import resource="classpath:META-INF/base/notification/mail.xml"/>-->

    <!-- チャットワーク通知設定の読込 -->
    <!-- isplibrary-notificationライブラリが必要 -->
    <!--<import resource="classpath:META-INF/base/notification/chatwork.xml"/>-->

    <!-- Amazon Web Services の設定の読込 -->
    <!-- isplibrary-sqs-pollerライブラリが必要 -->
    <!--<import resource="classpath:META-INF/base/aws/aws.xml"/>-->

    <!-- 全プロジェクト共通のcomponent-scanの設定（Autowiredに必要） -->
    <import resource="classpath:META-INF/base/component-scan.xml"/>

    <!-- HTTP Client設定の読込 -->
    <import resource="classpath:META-INF/base/httpclient/httpclient.xml"/>

    <beans profile="integration,integration-test">
        <!-- Spring Integration設定の読込 -->
        <import resource="classpath:META-INF/base/infrastructure/infrastructure.xml"/>
    </beans>

</beans>
