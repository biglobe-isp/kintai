<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">


    <!-- ======================================================================
    |
    |    Amazon SNS/SQS の設定を記述（META-INF/base/base-root.xmlから読み込まれる）
    |
    =========================================================================== -->

    <beans profile="api,linkage">

        <!-- AWS Client -->
        <import resource="classpath:META-INF/base/aws/client.xml"/>

        <!-- 優先度キュー対応のSNS Topic Publisher -->
        <import resource="classpath:META-INF/base/aws/sns.xml"/>

        <!-- SQS Queue Poller -->
        <import resource="classpath:META-INF/base/aws/sqs.xml"/>

        <!-- AOPのcomponent-scanの設定（Autowiredに必要） -->
        <import resource="classpath:META-INF/base/aws/component-scan.xml"/>

    </beans>

</beans>
