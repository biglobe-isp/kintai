<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       ">


    <!-- ======================================================================
    |
    |    Amazon SNS の設定を記述（META-INF/base/aws/aws.xmlから読み込まれる）
    |
    =========================================================================== -->

    <beans profile="api">
        <!-- SNSTopic の生成 -->
        <bean class="jp.co.biglobe.lib.sqs_poller.publication.sns.SNSTopic"
              factory-bean="snsTopicFactory" factory-method="build">
            <constructor-arg value="${aws.priority_queue_list}"/>
        </bean>
    </beans>

</beans>
