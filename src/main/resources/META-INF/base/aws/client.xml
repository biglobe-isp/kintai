<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       ">

    <!-- ======================================================================
    |
    |    AWS Clientの設定を記述（META-INF/base/aws/aws.xmlから読み込まれる）
    |
    =========================================================================== -->

    <!-- 認証情報 -->
    <bean id="defaultAWSCredentialsProviderChain" class="com.amazonaws.auth.DefaultAWSCredentialsProviderChain"/>
    <bean id="awsCredentials" class="com.amazonaws.auth.AWSCredentials"
          factory-bean="defaultAWSCredentialsProviderChain" factory-method="getCredentials"/>

    <!-- リージョン -->
    <bean id="region" class="com.amazonaws.regions.Region" factory-method="getRegion">
        <constructor-arg>
            <value type="com.amazonaws.regions.Regions">AP_NORTHEAST_1</value>
        </constructor-arg>
    </bean>

</beans>
