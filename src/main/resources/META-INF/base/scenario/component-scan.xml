<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
">


    <!-- ======================================================================
    |
    |    ScenarioExecutor設定を記述（META-INF/base/base-root.xmlから読み込まれる）
    |
    =========================================================================== -->


    <!-- シナリオを実行するコンポーネント

    【有効化する公開コンポーネント】
    ・jp.co.biglobe.lib.plugin.scenario.CoreScenarioExecutor

    【有効化する非公開コンポーネント】
    ・jp.co.biglobe.lib.component.scenario.threadpool.ThreadPoolShutdownListener

    【有効化に必要な外部コンポーネント】
    ・jp.co.biglobe.lib.essential.property.PropertyAccessor
     -->
    <context:component-scan base-package="jp.co.biglobe.lib.component.scenario"/>


    <!-- 下位互換用シナリオ実行コンポーネント

    【有効化する公開コンポーネント】
    ・jp.co.biglobe.lib.plugin.scenario.ScenarioExecutor

    【有効化する非公開コンポーネント】
    ・なし

    【有効化に必要な外部コンポーネント】
    ・jp.co.biglobe.lib.plugin.scenario.CoreScenarioExecutor
    ・jp.co.biglobe.lib.plugin.event.RequestEvent
    -->
    <bean class="jp.co.biglobe.lib.essential.api.scenario.ScenarioExecutorImpl"/>

</beans>
