<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
       ">


    <!-- ======================================================================
    |
    |    プロジェクト固有のcomponent-scanの設定を記述
    |    （META-INF/project-root.xmlから読み込まれる）
    |
    =========================================================================== -->

    <!-- Service層 -->
    <context:component-scan base-package="com.naosim.dddwork.kintai_management.service">
        <context:exclude-filter type="regex"
                                expression="com.naosim.dddwork.kintai_management.service.input.KintaiManagementRegistService"/>
        <context:exclude-filter type="regex"
                                expression="com.naosim.dddwork.kintai_management.service.total.KintaiManagementTotalService"/>
    </context:component-scan>

    <bean id="kintaiManagementRegistServiceMock" name="kintaiManagementRegistServiceMock"
          class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg
                value="com.naosim.dddwork.kintai_management.service.regist.KintaiManagementRegistService"/>
    </bean>
    <bean id="kintaiManagementTotalServiceMock" name="kintaiManagementTotalServiceMock"
          class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg
                value="com.naosim.dddwork.kintai_management.service.total.KintaiManagementTotalService"/>
    </bean>

</beans>
